@model Salones.Models.Reserva

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-light text-center">Editar</h1>

<h4 class="text-light text-center mb-4">Reserva</h4>
<hr class="border-light" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="bg-dark p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden input for ID -->
                <input type="hidden" asp-for="Id" />

                <!-- FechaInicio Field -->
                <div class="form-group mb-3">
                    <label asp-for="FechaInicio" class="text-light control-label">Fecha de Inicio</label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <!-- FechaFin Field -->
                <div class="form-group mb-3">
                    <label asp-for="FechaFin" class="text-light control-label">Fecha de Fin</label>
                    <input asp-for="FechaFin" class="form-control" type="date" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>

                <!-- Estado Field -->
                <div class="form-group mb-3">
                    <label asp-for="Estado" class="text-light control-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Usuario Field -->
                <div class="form-group mb-3">
                    <label for="UsuarioId" class="text-light control-label">Usuario</label>
                    <select class="form-control" id="UsuarioId" name="UsuarioId" required>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <option value="@usuario.Id">@usuario.Nombre</option>
                        }
                    </select>
                </div>

                <!-- Salon Field -->
                <div class="form-group mb-3">
                    <label for="SalonId" class="text-light control-label">Salón</label>
                    <select class="form-control" id="SalonId" name="SalonId" required>
                        @foreach (var salon in ViewBag.Salones)
                        {
                            <option value="@salon.Id">@salon.Nombre</option>
                        }
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="form-group mb-3">
                    <input type="submit" value="Guardar" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
