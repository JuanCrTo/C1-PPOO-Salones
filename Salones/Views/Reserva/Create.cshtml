@model Salones.Models.Reserva

@{
    ViewData["Title"] = "Crear";
}

<h1 class="text-light text-center">Crear</h1>

<h4 class="text-light text-center mb-4">Reserva</h4>
<hr class="border-light" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="bg-dark p-4 rounded shadow-sm">
                <div class="form-group mb-3">
                    <label for="FechaInicio" class="text-light">Fecha de Inicio</label>
                    <input type="datetime-local" class="form-control" id="FechaInicio" name="FechaInicio" required />
                </div>

                <div class="form-group mb-3">
                    <label for="FechaFin" class="text-light">Fecha de Fin</label>
                    <input type="datetime-local" class="form-control" id="FechaFin" name="FechaFin" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Estado" class="text-light">Estado</label>
                    <input type="text" class="form-control" id="Estado" name="Estado" required />
                </div>

                <div class="form-group mb-3">
                    <label for="UsuarioId" class="text-light">Usuario</label>
                    <select class="form-control" id="UsuarioId" name="UsuarioId" required>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <option value="@usuario.Id">@usuario.Nombre</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="SalonId" class="text-light">Salon</label>
                    <select class="form-control" id="SalonId" name="SalonId" required>
                        @foreach (var salon in ViewBag.Salones)
                        {
                            <option value="@salon.Id">@salon.Nombre</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Crear Reserva</button>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
